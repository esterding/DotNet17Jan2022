@model task090222.Models.Product

<form action="Edit" method="post">
  <div class="form-group row">
    <label for="Id" class="col-sm-2 col-form-label">Product Id</label>
    <div class="col-sm-10 pb-3">
      @Html.HiddenFor(m=>m.Id, new { @id="foruseredit"})
    </div>
  </div>
  <div class="form-group row">
    <label for="Name" class="col-sm-2 col-form-label">Product Name</label>
    <div class="col-sm-10 pb-3">
       @Html.TextBoxFor((m=>m.Name), new { @id = "EditName", @name = "Name" })
    </div>
  </div>
  <div class="form-group row">
      <label for="Price" class="col-sm-2 col-form-label">Price</label>
      <div class="col-sm-10 pb-3">
         @Html.TextBoxFor((m=>m.Price), new { @id = "EditPrice", @name = "Price" })
      </div>
  </div>
  <div class="form-group row">
      <label for="Quantity" class="col-sm-2 col-form-label">Quantity</label>
      <div class="col-sm-10 pb-3">
          @Html.TextBoxFor((m=>m.Quantity), new { @id = "EditQuantity", @name = "Quantity" })
      </div>
  </div>
  <div class="form-group row">
      <label for="Remarks" class="col-sm-2 col-form-label">Remarks</label>
      <div class="col-sm-10 pb-3">
          @Html.TextBoxFor((m=>m.Quantity), new { @id = "EditRemarks", @name = "Remarks" })
      </div>
  </div>
  <div class="form-group row">
      <label for="SupplierId" class="col-sm-2 col-form-label">Supplier Id</label>
      <div class="col-sm-10 pb-3">
          @Html.TextBoxFor((m=>m.SupplierId), new { @id = "EditSupplierId", @name = "SupplierId" })
      </div>
  </div>

 
  
    <input type="submit" value="Create Product" class="btn btn-success btn-lg my-5"/>
    <a type="button" class="btn btn-danger btn-lg my-5" href="./Index" role="button">Back</a>
</form>






