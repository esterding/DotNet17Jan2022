@model IEnumerable<task090222.Models.Product>
<div>
    <table id="tblProducts" class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Item Id</th>
            <th scope="col">Item Name</th>
            <th scope="col">Item Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Supplier Id</th>
            <th scope="col">Remarks</th>
        </tr>
    </thead>
    <tbody>
         @foreach(var item in Model)
        {
                var i = 0;
                ++i;
                <tr class = "tblRows">
                <td scope="row">@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>@item.SupplierId</td>
                <td>@item.Remarks</td>
                </tr>
        }
       
    </tbody>
</table>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Product")';">Add Product</button>
</div>

@section Scripts{
